# Database parameters
DB_HOST=snipe-mariadb
DB_PORT=3306
MYSQL_DATABASE=snipeit
MYSQL_PASSWORD={{ secrets.services.snipe.mysql.user_password }}
MYSQL_ROOT_PASSWORD={{ secrets.services.snipe.mysql.root_password }}
MYSQL_USER=snipeit

# Email Parameters
# - the hostname/IP address of your mailserver
MAIL_PORT_587_TCP_ADDR={{ secrets.email.server }}
#the port for the mailserver (probably 587, could be another)
MAIL_PORT_587_TCP_PORT=587
# the default from address, and from name for emails
MAIL_ENV_FROM_ADDR={{ secrets.email.address }}
MAIL_ENV_FROM_NAME=Sigma Draconis Assets
# - pick 'tls' for SMTP-over-SSL, 'tcp' for unencrypted
MAIL_ENV_ENCRYPTION=tls
# SMTP username and password
MAIL_ENV_USERNAME={{ secrets.email.username }}
MAIL_ENV_PASSWORD={{ secrets.email.password }}

# Snipe-IT Settings
APP_ENV=production
APP_DEBUG=false
APP_KEY={{ secrets.services.snipe.app_key }}
APP_URL=https://assets.sigmadraconis.ca
APP_TIMEZONE=US/Pacific
APP_LOCALE=en
APP_TRUSTED_PROXIES=traefik
SECURE_COOKIES=true

# Docker-specific variables
PHP_UPLOAD_LIMIT=100
